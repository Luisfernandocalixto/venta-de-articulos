<!-- signup -->
<br /><br /><br />
<form
  action="/users/signUp"
  method="post"
  id="signUpForm"
  style="display: grid; place-content: center; height: 40vh; margin-top: 40px;"
>
  <legend class="uk-legend uk-text-center">Crear cuenta</legend>

  <div class="uk-margin">
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: user"></span>
      <input
        class="uk-input"
        type="text"
        aria-label="Not clickable icon"
        placeholder="Usuario"
        name="name"
        id="inputName"
        required
        autocomplete="off"
        autofocus
      />
    </div>
  </div>
  <div class="uk-margin">
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: mail"></span>
      <input
        class="uk-input"
        type="email"
        aria-label="Not clickable icon"
        placeholder="Email"
        name="email"
        autocomplete="off"
        required
        id="inputEmail"
      />
    </div>
  </div>

  <div class="uk-margin">
    <div class="uk-inline">
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
      <input
        class="uk-input"
        type="text"
        aria-label="Not clickable icon"
        placeholder="Contraseña"
        name="password"
        autocomplete="off"
        required
        id="inputPassword"
      />
    </div>
  </div>

  <div class="uk-margin">
    <div class="uk-inline">
      <span class="uk-form-icon uk-form-icon-flip" uk-icon="icon: lock"></span>
      <input
        class="uk-input"
        type="text"
        aria-label="Not clickable icon"
        placeholder="Confirmar contraseña"
        autocomplete="off"
        name="confirm_password"
        required
        id="inputConfirmPassword"
      />
    </div>
  </div>

  <button
  id="signUpButton"
    class="uk-button uk-button-primary uk-width-1-1 uk-margin-small-bottom"
  >Crear cuenta</button>

  <hr />
  <div style="display: flex; justify-content: center; gap: 20px;">
    <p>Ya tienes cuenta?</p>
    <a href="/users/signIn">Iniciar</a>
  </div>
</form>
<!-- signup -->

{{#if errors}}
  <button
    hidden
    id="alert"
    class="uk-button uk-button-default demo"
    type="button"
    onclick="UIkit.notification({message: `
        {{#each errors}}
             {{text}} <br>
             {{/each}}
    `, status: 'danger'})"
  >With icon</button>
  <script>
    document.addEventListener('DOMContentLoaded', function(){
    let element = document.querySelector('#alert').onclick(true);
    })
  </script>
{{/if}}
{{#if error_msg}}
  <button
    hidden
    id="alertE"
    class="uk-button uk-button-default demo"
    type="button"
    onclick="UIkit.notification({message: `
             {{error_msg}}
    `, status: 'danger'})"
  >With icon</button>
  <script>
    document.addEventListener('DOMContentLoaded', function(){
    let element = document.querySelector('#alertE').onclick(true);
    })
  </script>
{{/if}}
{{#if success_msg}}
  <button
    hidden
    id="alertS"
    class="uk-button uk-button-default demo"
    type="button"
    onclick="UIkit.notification({message: `
              {{success_msg}}
    `, status: 'success'})"
  >With icon</button>
  <script>
    document.addEventListener('DOMContentLoaded', function (){
    let element = document.querySelector('#alertS').onclick(true);
    })
  </script>
{{/if}}

<script type="module" src="/js/signUp.js"></script>