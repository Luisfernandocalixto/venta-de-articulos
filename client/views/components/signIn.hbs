<!-- signIn -->

<div >
<div class="contentSignIn">

<div class="lateral">
  <div class="uk-flex uk-flex-center uk-flex-column uk-align-center uk-padding-large">

  <img src="/img/article.svg" style="filter: drop-shadow(16px 16px 20px gray) invert(45%);" class="uk-width-small uk-height-small" alt="Logo">
  <h1 class="color-inherit">Compra y vende fácilmente artículos
  </div>
</h1>
</div>

<div class="form">

<form
  id="signInForm"
  action="/users/signIn"
  method="post"
  class="formSignIn"
>
  <legend class="uk-legend uk-text-center">Iniciar sesión</legend>

  <div class="uk-margin">
    <div class="uk-inline">
      <span class="uk-form-icon" uk-icon="icon: mail"></span>
      <input
        class="uk-input"
        type="email"
        aria-label="Not clickable icon"
        placeholder="example@gmail.com"
        name="email"
        autofocus
        id="inputEmail"
        required
      />
    </div>
  </div>

  <div class="uk-margin">
    <div class="uk-inline">
      <a class="uk-form-icon uk-form-icon-flip cursor-pointer" uk-icon="icon: lock"></a>
      <input
        class="uk-input"
        type="password"
        aria-label="Not clickable icon"
        placeholder="******"
        autocomplete="off"
        name="password"
        id="inputPassword"
        required
      />
    </div>
  </div>

  <button
    class="uk-button uk-button-primary uk-margin-small-bottom"
    id="signInButton"
    type="submit"
  >Ingresar</button>

  <hr align="center" />
  <div  class="uk-flex uk-flex-center gap-20 ">
    <p>
      Aun no tienes cuenta?
    </p>
    <a href="/users/signUp">Crear cuenta</a>
  </div>
  <hr align="center" />
</form>
