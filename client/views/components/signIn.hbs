<form
  id="receivedAccount"
  action="/users/forgot-password"
  method="post"
  style=""

>

<div style="" class="uk-flex uk-flex-center">

</div>
  <div class="uk-margin flex uk-flex-center">
    <div class="uk-inline w-100">
      <span class="uk-form-icon" uk-icon="icon: mail"></span>
      <input
        class="uk-input"
        type="email"
        aria-label="Not clickable icon"
        placeholder="example@gmail.com"
        name="email"        
        autofocus
        required
      />
    </div>
  </div>


</form>
        <p class="uk-text-right">
            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancelar</button>
            <button class="uk-button uk-button-primary btn-send" form="receivedAccount" type="submit">Enviar</button>
        </p>
    </div>
</div>
</div>
</div>
